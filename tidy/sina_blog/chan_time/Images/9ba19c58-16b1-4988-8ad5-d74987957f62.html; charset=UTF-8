<script type="text/javascript">
    jQuery.cookie = function(name, value, options) {
        if (typeof value != 'undefined') { // name and value given, set cookie
            options = options || {};
            if (value === null) {
                value = '';
                options.expires = -1;
            }
            var expires = '';
            if (options.expires && (typeof options.expires == 'number' || options.expires.toUTCString)) {
                var date;
                if (typeof options.expires == 'number') {
                    date = new Date();
                    date.setTime(date.getTime() + (options.expires * 24 * 60 * 60 * 1000));
                } else {
                    date = options.expires;
                }
                expires = '; expires=' + date.toUTCString(); // use expires attribute, max-age is not supported by IE
            }
            var path = options.path ? '; path=' + options.path : '';
            var domain = options.domain ? '; domain=' + options.domain : '';
            var secure = options.secure ? '; secure' : '';
            document.cookie = [name, '=', encodeURIComponent(value), expires, path, domain, secure].join('');
        } else { // only name given, get cookie
            var cookieValue = null;
            if (document.cookie && document.cookie != '') {
                var cookies = document.cookie.split(';');
                for (var i = 0; i < cookies.length; i++) {
                    var cookie = jQuery.trim(cookies[i]);
                    // Does this cookie string begin with the name we want?
                    if (cookie.substring(0, name.length + 1) == (name + '=')) {
                        cookieValue = decodeURIComponent(cookie.substring(name.length + 1));
                        break;
                    }
                }
            }
            return cookieValue;
        }
    };

    function KeyDown(e) {
        e = window.event || e;
        var ke = e.keyCode || e.which;
        if (ke == 13) {
            //触发你的button事件
            $("#login_bnt").focus();
        }
    }

    function tijiao() {
        var pwd = $('.login_cheng .login_all .login_input2').val();
        var name = $('.login_cheng .login_all .login_input1').val().replace("@189.cn", "");

        var namea = $.trim(name);
        if(namea.charAt(0)=='0'){
            namea=namea+"@189.cn";
        }
        var pwda = $.trim(pwd);
        var checked = '1209600';
        if ($('#checkbox').attr('checked') == 'checked') {
            
            checked = '1209600';
        }
        if (namea == '') {
            $('#nr').html('用户名为空 ');
            $('#tishi').show();
            return 0;
        }
        if (pwda == '') {
            $('#nr').html('请输入密码');
            $('#tishi').show();
            return 0;
        }
        $('.loadlastjjl').show();
        $.getJSON("http://passport.21cn.com/api/login.do?jsoncallback=?", {userName: namea, password: pwda, saveLogin: checked,serviceId:180},function(data){
            if(data.isLogin=="true"){
                $.cookie('accessToken', data.accessToken, {expires: data.expiresIn/3600/24, path: '/', domain: 'p.21cn.com', secure: false});
                window.location.href='/';
            } else {
                alert(data.errorMsg);
            }
        });
    }
    var login =0;
    var inputing = false;
    $(function () {
	var paValue = $("#inputi").val();
	if(paValue!=''){
	
		$("#zhanghao").hide();
		$("#hzm").hide();
	}
        if (login == 1) {
            $('#login_form').show();

        }
        $('#qd').bind('click', function () {
            $('.loadlastjjl').hide();
            $('.login_input2').focus();
            $('#tishi').hide();

        });
        
        $('#inputi').css("cursor", "pointer");
        $("#zhanghao").css("cursor", "pointer");
        $("#inputi").focus(function () {
            inputing = true;
            $('#inputi').attr('class', 'login_input1high');
            var passport = $("#zhanghao").html();
            $("#zhanghao").hide();
            $("#hzm").hide();
            var paValue = $("#inputi").val();
            /*if(passport=="帐号:")
            {
               $("#zhanghao").hide();
               $("#hzm").hide();
               $('#inputi').attr('class','login_input1high');
             }*/
        });
	
        $('#inputi').blur(function () {
            var paValue = $("#inputi").val();
            if (paValue == "") {
                $("#zhanghao").show();
                $("#hzm").show();
            }

            paValue = paValue.replace("@189.cn", "");
            $('#inputi').val(paValue);
            paValue = paValue + "";
            $('#inputi').val(paValue);
            if (paValue == "@189.cn") {
                $('#inputi').val('');
                // $("#zhanghao").hide();
            } else {
            }
            $('#inputi').attr('class', 'login_input1');
        });
        $("#zhanghao").bind('click', function () {
            $("#zhanghao").hide();

            $("#hzm").hide();
            $("#inputi").focus();
            $("#inputi").attr('class', 'login_input1high');
        });
        $('#inputii').css("cursor", "pointer");
        $('#inputii').val('');
        $('.login_inputfont').css("cursor", "pointer");
        $("#inputii").focus(function () {
            $('#inputii').attr('class', 'login_input2high');
            $("#mima").hide();
            var mima = $("#mima").html();
            if (mima == "密码:") {
                $("#mima").hide();
                $('#inputii').attr('class', 'login_input2high');
            }
        });
        $("#mima").bind('click', function () {
            $("#mima").hide();
            $("#inputii").focus();
            $("#inputii").attr('class', 'login_input2high');
        });
        $("#inputii").blur(function () {
            var mim = $(this).val();

            if (mim == "") {
                $("#mima").show();
            }
            $('#inputii').attr('class', 'login_input2');
        });

        // $('#login_uls').css("cursor", "pointer");

        $('.loadlastjjl').hide();
        $('.login_cheng .login_all .login_close').bind("click", function () {
		
            $("#zhanghao").show();
            var passport = $('#inputi').attr('value', '');
            $("#mima").show();
            var mima = $('#inputii').attr('value', '');

            $('#login_form').css("display", "none");
            $('.login_cheng .login_all .login_qd span').text('');
        });
        $('#login').bind("click", function () {
            $('#inputi').attr('class', 'login_input1');
            /*if(passport=="")
